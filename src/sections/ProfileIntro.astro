---
import SignOutComponent from "@/components/SignOut";
import { getSession } from "auth-astro/server";
const session = await getSession(Astro.request);
---

<div class="flex min-h-screen flex-col items-center justify-center bg-background">
	<div class="w-full max-w-md rounded-lg bg-card px-6 py-8 shadow-lg">
		<div class="flex flex-col items-center space-y-6">
			<div class="text-center">
				<h1 class="text-2xl font-bold text-supporting-cyan-800">
					Welcome, {session?.user?.name}!
				</h1>
			</div>

			<div class="grid w-full grid-cols-2 gap-4"></div>
			<div class="flex items-center space-x-4">
				<SignOutComponent client:load text={"Sign Out"} />
			</div>
		</div>
	</div>
</div>
