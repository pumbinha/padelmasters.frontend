---
import SignOutComponent from "@/components/SignOut"
import { getSession } from "auth-astro/server"
const session = await getSession(Astro.request)
---

<div class="flex min-h-screen flex-col items-center justify-center bg-background">
	<div class="w-full max-w-md rounded-lg bg-card px-6 py-8 shadow-lg">
		<div class="flex flex-col items-center space-y-6">
			<!-- 
            TODO: do we have avatars?
            <Avatar class="w-24 h-24 border-4 border-primary">
            <AvatarImage src="/potential picture of Carlos.jpg" />
            <AvatarFallback>CN</AvatarFallback>
          </Avatar> -->
			<div class="text-center">
				<h1 class="text-2xl font-bold text-foreground">Welcome, {session?.user?.name}!</h1>
			</div>

			<div class="flex items-center space-x-4">
				<button>Settings</button>
			</div>
			<div class="grid w-full grid-cols-2 gap-4">
				<div class="rounded-lg bg-muted p-4">
					<h3 class="text-lg font-bold text-foreground">League Points</h3>
					<div class="flex items-center space-x-2 text-muted-foreground">
						<span>1250</span>
					</div>
				</div>
				<div class="rounded-lg bg-muted p-4">
					<h3 class="text-lg font-bold text-foreground">Next Match</h3>
					<div class="flex items-center space-x-2 text-muted-foreground">
						<span>July 15, 2023</span>
					</div>
				</div>
			</div>
			<div class="flex items-center space-x-4">
				<SignOutComponent>Sign Out</SignOutComponent>
			</div>
		</div>
	</div>
</div>
