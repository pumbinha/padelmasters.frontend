---
export interface InputScoreProps {
	value?: number;
	id: string;
}

const props = Astro.props as InputScoreProps;
const { value, id } = props;
---

<input
	id={id}
	name={id}
	type="number"
	required
	min="0"
	value={value || 0}
	class="h-12 w-12 rounded-full border border-gray-300 text-center text-base focus:outline-none focus:ring-2 focus:ring-primary-400"
/>
